extends ../layout/common.pug
block content
	.container
		.row
			h1 Sign Up
		.row
			if errors
				each error in errors
					.alert.alert-danger= error
		.row
			form(method="POST")
				.form-group
					label(for="email") Email
					input.form-control#email(type="text", name="email", style="width: 500px", value=value ? value.email : '', placeholder="Email")
				.form-group
					label(for="password") Password
					input.form-control#password(type="password", name="password", style="width: 500px", placeholder="Password")
				.form-group
					label(for="name") Name
					input.form-control#name(type="text", name="name", style="width: 500px", value=value ? value.name : '', placeholder="name")
				.form-group
					label(for="phone") Phone
					input.form-control#phone(type="text", name="phone", style="width: 500px", value=value ? value.phone : '', placeholder="phone")
					button.btn.btn-primary.mt-3(type="submit") Done